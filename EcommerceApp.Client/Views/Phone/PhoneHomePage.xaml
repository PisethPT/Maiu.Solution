<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:EcommerceApp.Client.ViewModels"
             xmlns:model="clr-namespace:EcommerceApp.Client.Models"
             x:Class="EcommerceApp.Client.Views.Phone.PhoneHomePage"
             x:DataType="viewmodel:PhoneHomePageViewModel"
             Title="{Binding Title}">
    <Grid ColumnDefinitions=".50*, .50*">
        <CollectionView ItemsSource="{Binding Products}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Product">
                    <Frame>
                        <VerticalStackLayout>
                            <Image Source="{Binding Image}"
                                   WidthRequest="125"
                                   HeightRequest="125"/>
                            <Label Text="{Binding Name}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>